<h3>Profile</h3>
<span>
  Name: <%= user.name %>
</span>
<span>
  Email: <%= user.email %>
</span>
<span>
  Birthday: <%= user.birthday %>
</span>
<span>
  Sex: <%= user.sex %>
</span>
<span>
  Phone: <%= user.phone_number %>
</span>
<span>
  <%= link_to "Friends", user_friendships_path(user) %>: <%= user.friends.count %>
</span>
<span>
  <%= link_to "Albums", user_albums_path(user) %> : <%= user.albums.count %>
</span>
<% if current_user?(user) %>
  <span>
    <%= link_to "Group", groups_path %> :<%= user.albums.count %>
  </span>
<% end %>
