<section>
  <h1 class="group-name">
      <%= @group.name %>
  </h1>
  <% if @group.owned?(current_user)%>
    <td><%= link_to "Edit",  "#" %></td>
    <td><%= link_to "Del", group_path(@group), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
  <span>
    Admin: <%= link_to @group.owner.name, @group.owner %>
  </span>
</section>