<tr>
<% if @microposts.has_comment? %>
  <% @microposts.comments.each do |comment| %>
    <li>
      <span> @<%= comment.user.name %> </span>
      <span class="content"> <%= wrap(comment.content) %></span>
      <span class="timestamp">
        Posted <%= time_ago_in_words(comment.created_at) %> ago.
      </span>
    </li>
  <% end %>
<% end %>
</tr>