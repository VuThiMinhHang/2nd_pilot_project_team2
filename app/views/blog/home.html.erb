<% provide(:title, "Home") %>
<% if signed_in? %>
  <div class="row">
    <aside class="left-sidebar">
      <section>
        <%= render "shared/user_info", user: current_user %>
      </section>
      <section>
      <h3>
        <%= link_to "Photos Albums", user_albums_path(current_user) %> (<%= current_user.albums.count %>)
      </h3>
      <section>
        <%= render "shared/user_profile", user: current_user %>
      </section>
    </aside>
      <div class="main-content">
        <section>
          <%= render "shared/micropost_form", user: current_user %>
        </section>
        <h3>
          New feeds
        </h3>
        <ul class="posts">
          <% @microposts.each do |micropost| %>
            <% if current_user.id == micropost.friend_id || current_user.friends.include?(micropost.friend_id) %>
              <%= render "shared/list_microposts", micropost: micropost %>
            <% end %>
          <% end %>
        </ul>
      </div>
    <div class="right-sidebar">
      <section>
        <%= render "shared/activities" %>
      </section>
    </div>
  </div> 
<% else %>
	<div class="center hero-unit">
		<h1>
      Wellcome to Facebook
    </h1>
		<h2>
			Connect with friends and the world around you on Facebook.
		</h2>
		<%= link_to "Signup now!!!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>