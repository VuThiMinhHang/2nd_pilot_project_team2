<% unless @user.friends.empty? %>
<% @user.friends.each do |u| %>

<td>
  <%= link_to u.name, user_path(u.id) %>
  <%= gravatar_for(u, size: 52)%>
</td>
<% if signed_in? && @user = current_user %><br>
<%= link_to 'unfriend', user_friendship_path(current_user.id, u.id), method: :delete, :confirm => 'Reject friend request! Are you sure?' %>
<% end %>
<% end %>
<% else %>
None
<% end %>