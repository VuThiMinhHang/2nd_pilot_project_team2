<% if @image.like_image?(current_user) %>
  <% @image.like_images.each do |f| %>
    <% if f.user_id == current_user.id %>
      <%= link_to "unlike", user_album_image_like_image_path(@user, @album, @image, f), method: :delete %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to "like", user_album_image_path(@user, @album, @image, like: "like_image"), method: :patch %>
<% end %>
<% if @image.has_like? %>
  <%= image_tag "like.ico" %>
  <%= @image.like_images.count %>
<% end %>