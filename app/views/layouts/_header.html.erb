<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "facebook", root_path, id: "logo" %></li>
      <nav>
        <ul class="nav pull-right">
          <li>
            <%= form_for search, url: users_path, method: :get do |f| %>
              <%=f.text_field :name, placeholder: "Search for people",class: "search" %>
          <% end %>
        </li>
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>
            <li><%= link_to current_user.name, user_path(current_user) %></li>
          <% end %>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= image_tag("favicon (1).ico") %> <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">  
                <li><%= link_to "Friends", user_friendships_path(current_user), class: "black" %></li>
                <li><%= link_to "Albums", user_albums_path(current_user),class: "black" %></li>
                <li><%= link_to "Groups", groups_path, class: "black" %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete", class: "black" %></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>